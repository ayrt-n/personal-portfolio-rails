<div class="form">
  <% flash.each do |key, message| %>
    <%= render "shared/flash_#{key}", key: key, message: message%>
  <% end %>
  
  <%= form_with model: @contact do |f| %>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <div class="control">
        <%= f.text_field :name, required: true, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <div class="control">
        <%= f.email_field :email, required: true, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :message, class: "label" %>
      <div class="control">
        <%= f.text_area :message, required: true, class: "textarea" %>
      </div>
    </div>

    <div style="display:none;">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, :hint => "Leave this field blank!" %>
    </div>

    <div class="field">
      <div class="control">
        <%= f.button class: "button" do %>
          Send Message
          <svg style="width:24px;height:24px" viewBox="0 0 24 24">
            <path fill="currentColor" d="M22 5.5H9C7.9 5.5 7 6.4 7 7.5V16.5C7 17.61 7.9 18.5 9 18.5H22C23.11 18.5 24 17.61 24 16.5V7.5C24 6.4 23.11 5.5 22 5.5M22 16.5H9V9.17L15.5 12.5L22 9.17V16.5M15.5 10.81L9 7.5H22L15.5 10.81M5 16.5C5 16.67 5.03 16.83 5.05 17H1C.448 17 0 16.55 0 16S.448 15 1 15H5V16.5M3 7H5.05C5.03 7.17 5 7.33 5 7.5V9H3C2.45 9 2 8.55 2 8S2.45 7 3 7M1 12C1 11.45 1.45 11 2 11H5V13H2C1.45 13 1 12.55 1 12Z" />
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
</div>